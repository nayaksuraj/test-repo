# ==============================================================================
# Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in the values
# DO NOT commit .env file to version control
# ==============================================================================

# ==============================================================================
# Docker Configuration
# ==============================================================================
DOCKER_REGISTRY=your-registry.example.com
DOCKER_REPOSITORY=demo-app
DOCKER_USERNAME=your-username
DOCKER_PASSWORD=your-password-or-token
DOCKER_PUSH=true

# ==============================================================================
# Helm Configuration
# ==============================================================================
HELM_REGISTRY=oci://your-registry.example.com/helm-charts
HELM_REGISTRY_USERNAME=your-username
HELM_REGISTRY_PASSWORD=your-password-or-token
HELM_PUSH=true
HELM_CHART_PATH=./helm-chart

# ==============================================================================
# Kubernetes Configuration
# ==============================================================================
# For local testing, use your kubeconfig path
KUBECONFIG=$HOME/.kube/config

# Namespace configuration
DEV_NAMESPACE=dev
STAGE_NAMESPACE=staging
PROD_NAMESPACE=production

# ==============================================================================
# SonarQube Configuration
# ==============================================================================
SONAR_ENABLED=false
SONAR_HOST_URL=https://sonarcloud.io
SONAR_TOKEN=your-sonar-token
SONAR_PROJECT_KEY=demo-app
SONAR_ORGANIZATION=your-org

# ==============================================================================
# Security Scanning Configuration
# ==============================================================================
# Trivy Configuration
TRIVY_SEVERITY=CRITICAL,HIGH,MEDIUM
TRIVY_EXIT_CODE=0  # Set to 1 to fail build on vulnerabilities
TRIVY_IGNORE_UNFIXED=false
SCAN_TYPE=both  # image, fs, or both

# OWASP Dependency Check
OWASP_CHECK_ENABLED=false

# ==============================================================================
# Testing Configuration
# ==============================================================================
# TestContainers
DOCKER_REQUIRED=true
TESTCONTAINERS_RYUK_DISABLED=false
PRE_PULL_IMAGES=false

# Code Coverage
GENERATE_COVERAGE=true
COVERAGE_THRESHOLD=80
FAIL_ON_LOW_COVERAGE=false

# ==============================================================================
# Application Configuration
# ==============================================================================
VERSION=0.0.1-SNAPSHOT
SPRING_PROFILES_ACTIVE=dev

# ==============================================================================
# Deployment Configuration
# ==============================================================================
# Auto-approve production deployments (use with caution!)
AUTO_APPROVE=false

# Canary deployment
CANARY_ENABLED=false
CANARY_WEIGHT=10

# ==============================================================================
# Monitoring and Logging
# ==============================================================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=false
